@model IEnumerable<blogMakale.Models.MakaleModel>

@{
    ViewData["Title"] = "MakaleListele";
    Layout = "~/Views/Shared/_Default.cshtml";
}

<h1>Makalelerim</h1>

<p>
    <a asp-action="MakaleEkle">Yeni Makale Oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MakaleBaslik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MakaleIcerik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MakaleTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kullanici)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MakaleBaslik)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MakaleIcerik)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MakaleTarihi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kullanici.AdSoyad)
            </td>
            <td>
                <a asp-action="MakaleGuncelle" class="btn btn-primary" asp-route-id="@item.id_Makale">Düzenle</a> 
             
                <a asp-action="MakaleSil" class="btn btn-danger" asp-route-id="@item.id_Makale">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
