@model blogMakale.Models.MakaleModel

@{
    ViewData["Title"] = "MakaleSil";
    Layout = "~/Views/Shared/_Default.cshtml";
}


<h3> Makaleyi silmek istediğinize emin misiniz?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MakaleBaslik)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MakaleBaslik)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MakaleIcerik)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MakaleIcerik)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MakaleTarihi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MakaleTarihi)
        </dd> 
    </dl>
    
    <form asp-action="MakaleSil">
        <input type="hidden" asp-for="id_Makale" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="MakaleListele" class="btn btn-primary">Listeye geri dön</a>
    </form>
</div>
