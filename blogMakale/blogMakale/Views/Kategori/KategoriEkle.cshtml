@model blogMakale.Models.KategoriModel

@{
    ViewData["Title"] = "KategoriEkle";
    Layout = "~/Views/Shared/_Default.cshtml";
}



<div class="row">
    <div class="col-md-4">
        <form asp-action="KategoriEkle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
